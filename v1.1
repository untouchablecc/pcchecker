@echo off
title Scanner Script

:: Set the path to your Python interpreter and script
set "PYTHON_EXE=C:\Path\To\Your\Python.exe"
set "SCRIPT_PATH=C:\Path\To\Your\Script.py"

:: Menu and options
:menu
    cls
    echo Choose an option:
    echo 1. Scan Directory
    echo 2. Recent Activities
    echo 3. Specific Process
    echo 4. Exit
    echo.

    set /p choice=Enter your choice:

    if "%choice%"=="1" (
        echo Scanning Directory...
        "%PYTHON_EXE%" "%SCRIPT_PATH%" --scan-directory
    ) else if "%choice%"=="2" (
        echo Fetching Recent Activities...
        "%PYTHON_EXE%" "%SCRIPT_PATH%" --recent-activities
    ) else if "%choice%"=="3" (
        echo Searching for Specific Process...
        "%PYTHON_EXE%" "%SCRIPT_PATH%" --specific-process
    ) else if "%choice%"=="4" (
        echo Exiting...
        exit /b 0
    ) else (
        echo Invalid choice. Please try again.
        goto :menu
    )

goto :menu
